.btn-wrap{
    background-color: #fff;
    box-shadow: 0 4rpx 4rpx #eee;
    display: flex;
    padding: 0 20rpx 30rpx;
    position: fixed;
    top: 0;
    width: 100%;
    box-sizing: border-box;
}
.leave-msg{
    flex-grow: 1;
    background-color: #f5f5f5;
    padding: 10rpx 30rpx;
    border-radius: 10rpx;
}
.leave-msg image{
    width: 32rpx;
    max-height: 32rpx;
    vertical-align: middle;
    margin-right: 16rpx;
}
.leave-msg text{
    color: #aaa;
    vertical-align: middle;
}
.show-my-msg{
    flex-grow: 0;
    background-color: #B7CBFE;
    margin-left: 10rpx!important;
    padding: 10rpx 20rpx;
    border-radius: 10rpx;
    font-weight: normal;
    width: auto!important;
}
.msg-list{
    padding: 120rpx 20rpx 0;
}
.noMore{
    display: block;
    text-align: center;
    font-size: 26rpx;
    color: #aaa;
    line-height: 60rpx;
}
.reply-input{
    position: fixed;
    width: 100%;
    box-sizing: border-box;
    background-color: #fff;
    box-shadow: 0 0 10rpx #eee;
    display: flex;
    padding: 10rpx;
    background-color: #f5f5f5;
}
.reply-input input{
    flex: 1 1 auto;
    height: 60rpx;
    background-color: #fff;
    padding-left: 20rpx;
}
.reply-input text{
    flex: 0 0 auto;
    background: #B7CBFE;
    font-size: 26rpx;
    padding: 0 30rpx;
    margin-left: 10rpx;
    line-height: 60rpx;
    border-radius: 10rpx;
}
.not-read{
    position: fixed;
    background: rgba(0, 0, 0, .3);
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 50%;
    width: 100rpx;
    height: 100rpx;
    right: 30rpx;
    bottom: 100rpx;
}
.not-read image{
    width: 64rpx;
}