.container{
    display: flex;
    flex-wrap: wrap;
}
.item{
    border-top: 1px solid #f5f5f5;
    display: flex;
    width: 50%;
    box-sizing: border-box;
    flex-direction: column;
    align-items: center;
    padding: 40rpx 0;
}
.item:nth-of-type(2n){
    border-left: 1px solid #f5f5f5;
}
.item .img{
    width: 80%;
}
.item text{
    color: #333;
    font-size: 26rpx;
    padding-top: 20rpx;
}
